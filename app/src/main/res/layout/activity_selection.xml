<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SelectionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dust"
        android:padding="20dp"
        android:textSize="25sp"
        android:fontFamily="@font/script"
        android:text="Shop Conmfortably"
        android:layout_gravity="center" />


    <TextView
        android:id="@+id/policyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="70dp"
        android:text="By using this app , you accept terms and conditions"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Customer"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:textSize="18sp"
            android:gravity="center"/>


        <TextView
            android:id="@+id/seller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Seller"
            android:background="#FF5722"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>